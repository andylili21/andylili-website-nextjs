{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_20", "openssl"],
          "cmds": ["echo 'Setup complete'"]
        },
        "install": {
          "cmds": ["cd server && npm install"]
        },
        "build": {
          "cmds": ["cd server && ./migrate.sh"]
        }
      },
      "start": {
        "cmd": "cd server && ./start.sh"
      }
    }
  }
}